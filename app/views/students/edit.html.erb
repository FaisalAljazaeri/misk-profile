<div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <h4> <%= link_to 'Update My Skills', student_skills_path, class: 'mb-2' %> </h4>
        <h4> <%= link_to 'Update My Projects', projects_path, class: 'mb-2' %> </h4>

        <h1>Edit Student</h1>
        <% if @student.errors.any? %>
            <div class="alert alert-danger pb-0">
                <ul>
                    <% @student.errors.full_messages.each do |error_message| %>
                        <li> <%= error_message %> </li>
                    <% end %>_fom
                </ul>
            </div>
        <% end %>

        <%= render partial: 'form', locals: { student: @student } %>
    </div>
</div>