<div class="row">
    <div class="col-12">
        <%= image_tag @student.avatar, size: '150', alt: @student.first_name %>
    </div>

    <div class="col-12 mt-2 mb-2">
        <%= link_to @student.linkedin_link, target: '_blank' do %>
            <%= image_tag 'linkedin.svg', size: '25' %>
        <% end %>

        <% if @student.github_link.present? %>
            <%= link_to @student.github_link, target: '_blank' do %>
                <%= image_tag 'github.svg', size: '25' %>
            <% end %>
        <% end %>
    </div>

    <div class="col-12">
        <h4> Full Name: </h4>
        <p> <%= @student.first_name %> <%= @student.last_name %> </p>
    </div>

    <div class="col-12">
        <h4> Course: </h4>
        <p> <%= @student.course.title %> </p>
    </div>

    <div class="col-12">
        <h4> Skills: </h4>
        <p> <%= @student.skills.map { |skill| skill.name }.join(', ') %> </p>
    </div>

    <div class="col-12">
        <h4> Summary: </h4>
        <p> <%= @student.summary %> </p>
    <div>
</div>

<div>
    <h1 class="mb-4"> Projects: </h1>
    <% @student.projects.each do |project| %>
        <div class="row project-card mb-4 mx-2 p-2">
            <div class="col-12 text-center mt-2">
                <h4> <%= project.name %> </h4>

                <%= link_to project.link, target: '_blank' do %>
                    <%= image_tag 'world-wide-web.svg', size: '20' %>
                <% end %>

                <% if project.github_link.present? %>
                    <%= link_to project.github_link, target: '_blank' do %>
                        <%= image_tag 'github.svg', size: '25' %>
                    <% end %>
                <% end %>
                    
                <p class="mt-2"> <%= project.description %> </p>
            </div>
            
            <div class="col-12 text-center">
                <%= image_tag project.project_img, size: '500', alt: project.name %>
            </div>
        </div>
    <% end %>
</div>

<%= link_to 'Back to All Students', students_path %>

<hr>