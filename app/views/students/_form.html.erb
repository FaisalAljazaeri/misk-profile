<%= form_with model: @student, local: true do |form| %>
    <div class="form-group">
        <%= form.label :first_name, 'First Name' %>
        <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :last_name, 'Last Name' %>
        <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :avatar, "Avatar" %> <em> ( .jpeg, .png, .jpg ) </em>
        <%= form.file_field :avatar, class: 'form-control-file' %>
         <small class="form-text text-muted mt-2">* If no file is chosen, the old avatar will be used.</small>
    </div>

    <div class="form-group">
        <%= form.label :summary, 'Summary' %>
        <%= form.text_area :summary, cols: 50, rows: 7, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :linkedin_link, 'LinkedIn Profile' %>
        <%= form.text_field :linkedin_link, class: 'form-control' %>
        <small class="form-text text-muted mt-2">Must contain 'http://'</small>
    </div>

    <div class="form-group">
        <%= form.label :github_link, 'GitHub Account' %> <small>(Optional)</small>
        <%= form.text_field :github_link, class: 'form-control' %>
        <small class="form-text text-muted mt-2">Must contain 'http://'</small>
    </div>

    <%= form.submit "Update Student", class: 'btn btn-secondary' %>
<% end %>