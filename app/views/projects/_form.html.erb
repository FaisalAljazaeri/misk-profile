<%= form_with model: @project, local: true do |form| %>
<div class="form-group">
    <%= form.label :name, 'Project Name' %>
    <%= form.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
    <%= form.label :description, 'Project Description' %>
    <%= form.text_area :description, cols: 50, rows: 7, class: 'form-control' %>
</div>

<div class="form-group">
    <%= form.label :img, 'Project Image' %>
    <%= form.text_field :img, class: 'form-control' %>
</div>

<div class="form-group">
    <%= form.label :link, 'Project Link' %>
    <%= form.text_field :link, class: 'form-control' %>
</div>

<%= form.submit 'Create Project', class: 'btn btn-primary' %>
<% end %>