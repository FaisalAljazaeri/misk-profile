<div>
    <h4> <%= @project.name %> </h4>
    <p> <%= @project.description %> </p>
    <%= image_tag @project.project_img, size: '250', alt: @project.name %>
    <%= link_to "Check it out!", @project.link, target: "_blank" %>

    <div class="mt-4">
        <%= link_to 'Edit', edit_project_path, class: 'btn btn-primary' %>
        <%= link_to 'Delete', destroy_project_path, class: 'btn btn-danger', method: :delete %>
    </div>
</div>