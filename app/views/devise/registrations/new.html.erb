<div class="row">
  <div class="col-12 col-sm-8 col-md-6 col-lg-4">
    <h2 class="mb-2">Sign up</h2>

    <%= render "devise/shared/links" %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-3' } ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, 'Email Address' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, 'First Name' %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, 'Last Name' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :avatar, "Avatar" %> <em> ( .jpeg, .png, .jpg ) </em>
        <%= f.file_field :avatar, class: 'form-control-file' %>
      </div>

      <div class="form-group">
        <%= f.label :course_id, 'Course' %>
        <%= f.select :course_id, Course.all.collect { |c| [ c.abbreviation, c.id ] }, { include_blank: true }, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :summary, 'Summary' %>
        <%= f.text_area :summary, cols: 50, rows: 7, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :linkedin_link, 'LinkedIn Profile' %>
        <%= f.text_field :linkedin_link, class: 'form-control' %>
        <small class="form-text text-muted mt-2">Must contain 'http://'</small>
      </div>

      <div class="form-group">
        <%= f.label :github_link, 'GitHub Account' %> <small>(Optional)</small>
        <%= f.text_field :github_link, class: 'form-control' %>
        <small class="form-text text-muted mt-2">Must contain 'http://'</small>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-dark mb-3' %>
      </div>
    <% end %>
    </div>
</div>

